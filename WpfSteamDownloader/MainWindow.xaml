<Window x:Class="WpfSteamDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSteamDownloader"
        mc:Ignorable="d"
        Title="Steam Workshop Downloader" Height="700" Width="1000" MinWidth="800" MinHeight="600"
        Background="#FF828DA5" Foreground="#F3F6FA" FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Button with rounded corners -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4B5563"/>
            <Setter Property="Foreground" Value="#F3F6FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#222" BlurRadius="6" ShadowDepth="1" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern TextBox with rounded corners -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#313A46"/>
            <Setter Property="Foreground" Value="#F3F6FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#F3F6FA"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Segoe UI Semibold" FontSize="20" Foreground="#F3F6FA" Margin="0,0,0,8"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#222" BlurRadius="10" ShadowDepth="2" Opacity="0.13"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#313A46"/>
            <Setter Property="Foreground" Value="#F3F6FA"/>
            <Setter Property="BorderBrush" Value="#23272F"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="RowBackground" Value="#2C3642"/>
            <Setter Property="AlternatingRowBackground" Value="#313A46"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area (Left) -->
        <DockPanel Grid.Column="0" Grid.ColumnSpan="2">
            <!-- Setup Group -->
            <GroupBox Header="Add Workshop Item" DockPanel.Dock="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto" MinWidth="99.297"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Height="31" Margin="8,0,8,0" Foreground="#FFF2F5F9">Workshop Collection/Link/ID:</Label>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AddItemText, UpdateSourceTrigger=PropertyChanged}" Margin="8,8,8,8"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="Add Item" Command="{Binding AddItemCommand}" Background="#F3B562" Foreground="#23272F" Margin="8,8,8,8"/>
                </Grid>
            </GroupBox>

            <!-- Actions Group -->
            <GroupBox Header="Actions" DockPanel.Dock="Top">
                <WrapPanel Width="492" UseLayoutRounding="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Download" Command="{Binding DownloadCommand}" Background="#F3B562" Foreground="#23272F" FontWeight="Bold" Margin="12,8" Padding="24,12" MinWidth="140" MinHeight="44"/>
                    <Button Content="Retry Failed" Command="{Binding RetryFailedCommand}" Margin="12,8" Padding="24,12" MinWidth="140" MinHeight="44"/>
                    <Button Content="Remove Selected" Command="{Binding RemoveSelectedCommand}" Margin="12,8" Padding="24,12" MinWidth="140" MinHeight="44"/>
                    <Button Content="Clear All" Command="{Binding ClearAllCommand}" Margin="12,8" Padding="24,12" MinWidth="140" MinHeight="44"/>
                    <Button Content="Save List..." Command="{Binding SaveListCommand}" Margin="12,8" Padding="24,12" MinWidth="140" MinHeight="44"/>
                    <Button Content="Load List..." Command="{Binding LoadListCommand}" Margin="12,8" Padding="24,12" MinWidth="140" MinHeight="44"/>
                    <Button Content="Open Download Folder" Command="{Binding OpenFolderCommand}" Padding="24,12" MinHeight="44" MinWidth="180" Margin="12,8,12,8"/>
                </WrapPanel>
            </GroupBox>

            <!-- Workshop Items List -->
            <DataGrid ItemsSource="{Binding WorkshopItems}" AutoGenerateColumns="False" CanUserAddRows="False"
                      SelectedItem="{Binding SelectedWorkshopItem}" Margin="12" MinHeight="220"
                      HorizontalGridLinesBrush="#23272F" VerticalGridLinesBrush="#23272F">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                    <DataGridTextColumn Header="Link/ID" Binding="{Binding Url}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Details and Log Area (Right) -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Left" Background="Transparent" Margin="430,0,0,0"/>
        <DockPanel Grid.Column="2">
            <!-- Details Panel -->
            <GroupBox Header="Mod Details" DockPanel.Dock="Top">
                <Border Background="#313A46" CornerRadius="14" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <Image Source="{Binding SelectedWorkshopItem.ImageUrl}" Height="160" Margin="0,0,0,12" Stretch="UniformToFill"/>
                        <TextBlock Margin="6" FontWeight="SemiBold"><Run Text="Author: "/><Run Text="{Binding SelectedWorkshopItem.Author}"/></TextBlock>
                        <TextBlock Margin="6"><Run Text="File Size / Item Count: "/><Run Text="{Binding SelectedWorkshopItem.FileSize}"/></TextBlock>
                        <TextBlock Margin="6"><Run Text="Posted: "/><Run Text="{Binding SelectedWorkshopItem.DatePosted}"/></TextBlock>
                        <TextBlock Margin="6"><Run Text="Visitors: "/><Run Text="{Binding SelectedWorkshopItem.Visitors}"/></TextBlock>
                    </StackPanel>
                </Border>
            </GroupBox>

            <!-- Log and Progress -->
            <GroupBox Header="Log &amp; Progress">
                <DockPanel>
                    <ProgressBar DockPanel.Dock="Top" Height="14" Margin="12"
                                 Value="{Binding ProgressValue}" Maximum="{Binding ProgressMax}" Background="#23272F" Foreground="#F3B562"/>
                    <TextBox Text="{Binding LogText}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Margin="0,12,0,0" Background="#23272F" Foreground="#F3F6FA" FontSize="8" FontFamily="Txt"/>
                </DockPanel>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
